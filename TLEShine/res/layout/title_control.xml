<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/activity_title_bg_color"
    android:padding="2dp" >

    <Button
        android:id="@+id/btn_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/activity_title_text_color"
        android:textSize="@dimen/activity_title_btn_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:textColor="@color/activity_title_text_color"
        android:textSize="@dimen/activity_title_text_size" />

    <Button
        android:id="@+id/btn_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/activity_title_text_color"
        android:textSize="@dimen/activity_title_btn_size"
        android:visibility="gone" />

</RelativeLayout>